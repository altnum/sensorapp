FROM influxdb:2.0

VOLUME  ["$PWD/data:/var/lib/influxdb2", "$PWD/config:/etc/influxdb2"]

ENV DOCKER_INFLUXDB_INIT_MODE=setup
ENV DOCKER_INFLUXDB_INIT_USERNAME=altnum
ENV DOCKER_INFLUXDB_INIT_PASSWORD=12345678
ENV DOCKER_INFLUXDB_INIT_ORG=sensor-org
ENV DOCKER_INFLUXDB_INIT_BUCKET=sensors-bucket
ENV DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=mytoken

EXPOSE 8086